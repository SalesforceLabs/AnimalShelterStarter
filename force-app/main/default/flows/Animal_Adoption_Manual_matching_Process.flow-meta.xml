    <formulas>
        <name>animalDifferentSpeciesConversion</name>
        <dataType>Boolean</dataType>
        <expression>IF(INCLUDES({!recordId.Rehoming_Requirements__c},&apos;No Animals of different species&apos;),TRUE,FALSE)</expression>
    </formulas>
    <formulas>
        <name>animalNoChildrenConversion</name>
        <dataType>Boolean</dataType>
        <expression>IF(INCLUDES({!recordId.Rehoming_Requirements__c}, &quot;No Children&quot;),TRUE,FALSE)</expression>
    </formulas>
    <formulas>
        <name>animalSafeGardenConversion</name>
        <dataType>Boolean</dataType>
        <expression>IF(INCLUDES({!recordId.Rehoming_Requirements__c}, &quot;Secure Garden&quot;),TRUE,FALSE)</expression>
    </formulas>
    <formulas>
        <name>animalSameSpeciesConversion</name>
        <dataType>Boolean</dataType>
        <expression>IF(INCLUDES({!recordId.Rehoming_Requirements__c},&apos;No Animals of same species&apos;),TRUE,FALSE)</expression>
    </formulas>
    <formulas>
        <name>animalSpecialCareConversion</name>
        <dataType>Boolean</dataType>
        <expression>IF(OR(INCLUDES({!recordId.Rehoming_Requirements__c},&apos;Dietary&apos;),INCLUDES({!recordId.Rehoming_Requirements__c},&apos;Medical&apos;),INCLUDES({!recordId.Rehoming_Requirements__c},&apos;Experienced Owner&apos;),INCLUDES({!recordId.Rehoming_Requirements__c}, &apos;Specialist Equipment&apos;)), TRUE, FALSE )</expression>
    </formulas>
